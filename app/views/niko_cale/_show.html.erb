<div id="niko_niko_calendar" style="overflow-x:auto">
<table border="1" class="nikocale">
  <thead>
  <tr>
    <th rowspan="3" nowrap width="10%">
      <%= link_to (my_image 'previous.png', l(:label_previous), "", 'cursor: pointer;margin-right: 64px'), {:action=>"index", :date_scope=>(@dates.first - 1).to_s} %>
      <%= link_to (my_image 'next.png', l(:label_next), "", 'cursor: pointer;'), {:action=>"index", :date_scope=>(@dates.last + @dates.size).to_s} %>
    </th>
    <% if @dates.first.year == @dates.last.year %>
      <th colspan=<%= "#{@dates.size}" %>><%= @dates.first.year %></th>
    <% else %>
      <th colspan=<%= "#{@dates.first.end_of_year - @dates.first + 1}" %>><%= @dates.first.year %></th>
      <% unless @dates.first.month == @dates.last.month %>
        <th colspan=<%= "#{@dates.last - @dates.first.end_of_year + 1}" %>><%= @dates.last.year %></th>
      <% end %>
    <% end %>
  </tr>
  <tr>
    <th colspan=<%= "#{@dates.first.end_of_month - @dates.first + 1}" %>><%= l(:date)[:abbr_month_names][@dates.first.month] %></th>
    <% unless @dates.first.month == @dates.last.month %>
      <th colspan=<%= "#{@dates.last - @dates.first.end_of_month + 1}" %>><%= l(:date)[:abbr_month_names][@dates.last.month] %></th>
    <% end %>
  </tr>
  <tr>
    <% @dates.each do |date| %>
      <th class=<%= (date == Date.today) ? 'today' : 'date' %>>
        <%= link_to_date date, @project %>
        <% versions = @versions.select {|version| version.effective_date == date} %>
        <% versions.each do |version| %>
          <span class="tooltip" style="position: absolute; top:2px;">
            <%= link_to version_image, {:controller=>:versions, :action=>:show, :id=>version.id} %>       
            <span class="tip"><%= version.name %></span>
          </span>
        <% end %>
      </th>
    <% end %>
  </tr>
  </thead>
  <tfoot>
  <% unless @morales.empty? %>
  <tr class=morale feeling>
    <td class=user><%= link_to_feeling_list(:project=>@project, :title=>@project.name) %></td> 
    <% @dates.each do |date| %>
      <% morale = @morales.find {|m| m.at == date} %>
      <td class=feeling><%= image_for(morale) %></td>
    <% end %>
  </tr>
  <% end %>
  </tfoot>
  <tbody>
  <% @users.each do |user| %>
  <tr class=<%= cycle 'odd', 'even' %>> 
    <td class=user>
       <p><%= avatar(user, :size => "32") %><%= link_to_user(user) %></p>
       <p><%= link_to_issues_list @issues_count_per_user[user], @project.identifier, user.id %></p>
    </td> 
    <% @dates.each do |date| %>
      <% feeling = @feelings_per_user[user].find {|feeling| feeling.at == date} %>
      <td class=feeling>
        <% if feeling.nil? && editable?(Feeling.for(user, date)) && @project.users.include?(user) %>
          <%= link_to add_image, {:controller=>:feelings, :action=>:new, "feeling"=>{"at"=>date}, :project_id=>@project.identifier} %>
        <% else %>
          <%= link_to_feeling(feeling, @project.identifier) %>
        <% end %>
      </td>
    <% end %>
  </tr> 
  <% end; reset_cycle %>
  </tbody>
</table>
</div>
